{% endblock %}    
    
{% macro fieldReadText(element, value, label) %}
      <div class="">
          <label for="tipddy_securitybundle_show_{{ element }}">{{ label }}</label>
          
          <div class="field-wrapper">
             {{ value }}
          </div>
     </div>
{% endmacro %}        
