{% extends '::base.html.twig' %}
{% set tab = app.request.attributes.get('_route') != 'survey_show' %}
{% block stylesheets %}
<link rel="stylesheet" type="text/css" href="{{ asset('bundles/tipddybackend/css/style.css') }}" /> 
{% endblock %}

{% block body %}
<div id="root">
  {% if tab %} 
  <div id="topBars">
    <div id="topLeftBar">
      {% include 'TipddyBackendBundle::includes/top-bars-left.html.twig' %}             
    </div>
    <div id="topRightBar">
      {% include 'TipddyBackendBundle::includes/top-bars-right.html.twig' %}
    </div>
    {% endif %}
  </div>
  <div id="header">
    <span id="logo"></span>
  </div>
  {% if tab %} 
  <div>    
    {% include 'TipddyBackendBundle::includes/main-menu.html.twig' %}   
  </div>   
  {% endif %}

  <div class="page">
    <div class="pageWrap">
      {% if tab %} 
      <div class="nav_sep">
        <div id="top_nav">
          {% include 'TipddyBackendBundle::includes/sub-menu.html.twig' %}             
        </div>
      </div>
      {% endif %}
      <div id="dashboard">
        {% if app.session.has('survey') %}
        {% include 'TipddyBackendBundle::includes/left-menu.html.twig' %}
        {% endif %}

        {% block optionsexport %} {% endblock %} 
        {% block menuizq %}{% endblock %}

        <div id="contenido" class="{{ app.session.has('survey') ? 'width-contenido-menu' : 'width-contenido' }}">

          {% block content %} {% endblock %}

        </div>
        <br class="clearfloat" />
      </div>                
    </div>
  </div>

</div>

<div id="footer">
  <hr />
  <div>Versi√≥n TipSurvey 1.0.1</div>
  <div>
    <a><img border="0" src="{{ asset('bundles/tipddybackend/images/logo-tipddy.png')}}" /></a>
    &copy; 2011 - Tipddy | info@tipddy.cl
  </div>
</div>
{% endblock %} 

{% block javascripts %}
{{ parent() }}
<script type="text/javascript" src="{{ asset('public/js/blockUI/jquery.blockUI.js') }}"></script>
<script type="text/javascript" src="{{ asset('public/js/jquery.mousewheel-3.0.6.pack.js') }}"></script>
<!-- Add fancybox -->
<link rel="stylesheet" href="{{ asset('public/js/fancybox/jquery.fancybox.css') }}" type="text/css" media="screen" />
<script type="text/javascript" src="{{ asset('public/js/fancybox/jquery.fancybox.pack.js') }}"></script>

<!-- Optionally add helpers - button, thumbnail and/or media -->
<link rel="stylesheet" href="{{ asset('public/js/fancybox/helpers/jquery.fancybox-buttons.css') }}" type="text/css" media="screen" />
<script type="text/javascript" src="{{ asset('public/js/fancybox/helpers/jquery.fancybox-buttons.js') }}"></script>
<script type="text/javascript" src="{{ asset('public/js/fancybox/helpers/jquery.fancybox-media.js') }}"></script>

<link rel="stylesheet" href="{{ asset('public/js/fancybox/helpers/jquery.fancybox-thumbs.css') }}" type="text/css" media="screen" />
<script type="text/javascript" src="{{ asset('public/js/fancybox/helpers/jquery.fancybox-thumbs.js') }}"></script>

<script type="text/javascript">
  jQuery(document).ready(function($) {
    $("a.iframe-header").fancybox({
      'hideOnContentClick': false,
      'autoScale' : true,
      'type': 'iframe',
      'width': '100%',
      'height': '100%',
      'scrolling': 'no'
    });
  })
</script>

{% endblock %}

